bindsym $mod+Shift+t exec $term -e bash -lc '~/.config/sway/settime.sh; echo; read -n 1 -p "Press any key to close..."'

bindsym --no-repeat $mod+Print exec $term -e bash -lc 'copyq show'
bindsym --no-repeat $mod+slash exec $term -e yazi
bindsym --no-repeat $mod+BackSpace exec firefox

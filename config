
# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term foot
# Your preferred application launcher
set $menu wmenu-run
seat * xcursor_theme Bibata-Modern-Amber 32

# window opening rules
## execs 
# Clipboard https://github.com/savedra1/clipse?tab=readme-ov-file
exec clipse -listen
exec ~/.config/sway/scripts/battery-warn.sh
exec autotiling
default_orientation auto
exec ~/.config/sway/scripts/float-geometry-watcher.sh
exec_always ~/.config/sway/scripts/borders-follow-state.sh

set $popup popup

# Specific popups (self-contained: floating + resize + center)

for_window [app_id="foot" title="^$popup-update"]         floating enable, resize set 1200 600, move position center
for_window [app_id="foot" title="^$popup-settime$"]       floating enable, resize set 500 150,  move position center
for_window [app_id="foot" title="^$popup-tuis"]           floating enable, resize set 1000 700, move position center

for_window [app_id="foot" title="^$popup-f-aesthetics"]   floating enable, resize set 800 450,  move position center
for_window [app_id="foot" title="^$popup-f-system"]       floating enable, resize set 850 600,  move position center
for_window [app_id="foot" title="^$popup-f-devices"]      floating enable, resize set 700 400,  move position center
for_window [app_id="foot" title="^$popup-f-wifi"]         floating enable, resize set 1450 450, move position center
for_window [app_id="foot" title="^$popup-f-info"]         floating enable, resize set 1200 750, move position center
for_window [app_id="foot" title="^$popup-f-main"]         floating enable, resize set 1800 400, move position center
for_window [app_id="foot" title="^$popup-f-hardware"]     floating enable, resize set 1150 700, move position center

for_window [app_id="foot" title="^$popup-wifi-check"]    floating enable, resize set 1200 1000, move position center
for_window [app_id="foot" title="^$popup-wifi-select"]    floating enable, resize set 600 500, move position center
for_window [app_id="foot" title="^$popup-wifi-device-select"] floating enable, resize set 500 500, move position center
for_window [app_id="foot" title="^$popup-audio-select"]   floating enable, resize set 1200 100,  move position center

for_window [app_id="yazi-nvim"] floating enable, move position center, resize set 1000 700, opacity 0.85
for_window [app_id="PrismLauncher"] floating enable, move position center
for_window [app_id="qutebrowser"] opacity 0.85
for_window [class="NotesHub"] opacity 0.85
for_window [app_id="signal"] opacity 0.85
for_window [app_id="foot"] opacity 0.85
for_window [app_id="libreoffice"] opacity 0.85
for_window [class="discord"] opacity 0.85
for_window [app_id="org.pwmt.zathura"] opacity 0.85
 
### Input configuration
   input type:touchpad {
       dwt enabled
       tap enabled
       accel_profile adaptive
       natural_scroll enabled
       middle_emulation enabled
   }

   input type:keyboard {
       xkb_layout "eu"
       xkb_options "compose:insert"
       repeat_delay 200
       repeat_rate 35
   }

   input type:pointer {
       accel_profile flat
       pointer_accel 0
   }

  input type:touch {
    tap enabled
    drag enabled
    drag_lock enabled
    map_to_output eDP-1
  }


# User keybinds

# keybinds update
bindsym --no-repeat $mod+Shift+u fullscreen disable; exec $term -T "$popup-update-rebuild" -e bash -c 'nix flake update --flake ~/nixos && sudo nixos-rebuild switch --upgrade --flake ~/nixos#rt4817; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Shift+o fullscreen disable; exec $term -T "$popup-update-optimise" -e bash -c 'sudo nix-collect-garbage; echo; sudo nix store optimise; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Shift+w fullscreen disable; exec $term -T "$popup-update-wipe" -e bash -c "swaynag -t warning -y overlay -m 'You pressed the wipe shortcut. Do you really want to delete all other nix configurations and reboot?' -B 'Yes, delete all other nix configurations and reboot' 'sudo nix-collect-garbage -d; echo; sudo nix store optimise; rm -Rf ~/.local/state/battery-interval-swaynag.log; reboot'"

# always run rebuild after pixymon update
bindsym --no-repeat $mod+Control+p fullscreen disable; exec $term -T "$popup-update-pixymon" -e bash -c 'cd ~/pixy2 && git pull --ff-only && cd scripts && ./build_pixymon_src.sh && cp ~/pixy2/src/host/linux/pixy.rules ~/nixos; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Control+t fullscreen disable; exec $term -T "$popup-settime" -e bash -c '~/.config/sway/scripts/settime.sh; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Control+c fullscreen disable; exec $term -T "$popup-update-calendar" -e bash -c 'rm -Rf ~/.local/share/calcurse/compass.ics ~/.local/share/calcurse/compass; curl -L -o ~/.local/share/calcurse/compass.ics "https://mhs-vic.compass.education/download/sharedCalendar.aspx?uid=19030&key=de953c62-f1e9-475d-b0c2-83fd3c09ff62&c.ics"; echo; calcurse -D ~/.local/share/calcurse/compass -i ~/.local/share/calcurse/compass.ics; echo; read -n 1 -p "Press any key to close..."' 


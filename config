
# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term foot
# Your preferred application launcher
set $menu wmenu-run
seat * xcursor_theme Bibata-Modern-Amber 32

# window opening rules

exec autotiling
default_orientation auto

set $popup popup

for_window [app_id="foot" title="^$popup-update-*"] \
    floating enable, \
    move position center, \
    resize set 1200 600 

for_window [app_id="foot" title="^$popup-settime"] \
    floating enable, \
    move position center, \
    resize set 500 100 

#below includes regular foot terminal as well (clipse and yazi are others
for_window [app_id="foot" title="^$popup-tuis"] \
    floating enable, \
    move position center, \
    resize set 1000 700

for_window [app_id="foot" title="^$popup-f-aesthetics"] \
    floating enable, \
    move position center, \
    resize set 750 450 

for_window [app_id="foot" title="^$popup-f-system"] \
    floating enable, \
    move position center, \
    resize set 800 600 

for_window [app_id="foot" title="^$popup-f-devices"] \
    floating enable, \
    move position center, \
    resize set 650 450 

for_window [app_id="foot" title="^$popup-f-wifi"] \
    floating enable, \
    move position center, \
    resize set 1000 450

for_window [app_id="foot" title="^$popup-f-info"] \
    floating enable, \
    move position center, \
    resize set 1200 800 

for_window [app_id="foot" title="^$popup-f-main"] \
    floating enable, \
    move position center, \
    resize set 1400 400 

for_window [app_id="foot" title="^$popup-f-hardware"] \
    floating enable, \
    move position center, \
    resize set 1000 700

for_window [app_id="foot" title="^$popup-wifi-select"] \
    floating enable, \
    move position center, \
    resize set 1200 1000

for_window [app_id="foot" title="^$popup-wifi-device-select*"] \
    floating enable, \
    move position center, \
    resize set 500 500

for_window [app_id="foot" title="^$popup-audio-select*"] \
    floating enable, \
    move position center, \
    resize set 1200 100

for_window [app_id ="PrismLauncher"] floating enable, move position center

### Output configuration
output * bg ~/.config/sway/mcqueen.jpeg fill
# Example configuration:
#   output HDMI-A-1 resolution 1920x1080 position 1920,0

### Input configuration
   input type:touchpad {
       dwt enabled
       tap enabled
       natural_scroll enabled
       middle_emulation enabled
   }

   input type:keyboard {
       xkb_layout "eu"
       repeat_delay 200
       repeat_rate 35
   }

   input type:mouse {
       accel_profile flat
   }
#
# You can also configure each device individually.
# Read `man 5 sway-input` for more information about this section.

# User keybinds

## execs 
# Clipboard https://github.com/savedra1/clipse?tab=readme-ov-file
exec clipse -listen
exec ~/.config/sway/scripts/battery-warn.sh

# keybinds update
bindsym --no-repeat $mod+Shift+u exec $term -T "$popup-update-rebuild" -e bash -lc 'nix flake update --flake ~/nixos && sudo nixos-rebuild switch --flake ~/nixos#rt4817; echo; read -n 1 -p "Press any key to close..."'
    # always run rebuild after pixymon update
bindsym --no-repeat $mod+Shift+p exec $term -T "$popup-update-pixymon" -e bash -lc 'cd ~/pixy2 && git pull --ff-only && cd scripts && ./build_pixymon_src.sh; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Shift+t exec $term -T "$popup-settime" -e bash -lc '~/.config/sway/scripts/settime.sh; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Shift+o exec $term -T "$popup-update-optimise" -e bash -lc 'sudo nix-collect-garbage; echo; sudo nix store optimise; echo; read -n 1 -p "Press any key to close..."'
bindsym --no-repeat $mod+Shift+w exec $term -T "$popup-update-wipe" -e bash -lc "swaynag -c ~/.config/sway/swaynag/config -t night -m 'You pressed the wipe shortcut. Do you really want to delete all old configurations and reboot?' -B 'Yes, delete all old configurations and reboot' 'sudo nix-collect-garbage -d; echo; sudo nix store optimise; rm -Rf ~/.local/state/battery-interval-swaynag.log; reboot'"

